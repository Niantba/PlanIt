<h1>New Expense</h1>

<%= form_for [@user_trip, Expense.new] do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :amount %>
    <%= f.number_field :amount %>
  </div>

  <div>
    <%= f.submit "Create Expense" %>
  </div>
<% end %>

<%= link_to "Back to Expenses", expenses_path %>

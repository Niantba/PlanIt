<%# Banner %>
<div class="trip-banner">
  <div class="trip-banner-card">
    <h1><%= @trip.destination %></h1>
    <p><%= @trip.start_date.strftime("%e/%m/%y") %> ~ <%= @trip.end_date.strftime("%e/%m/%y") %></p>
  </div>
</div>

<div class="container">
  <%# Days %>
  <% (@trip.start_date..@trip.end_date).to_a.each do |date| %>
    <h3><%= date.strftime("%a %e/%m") %></h3>
    <%# Activities %>
    <% @activities.where(":date >= start_date AND :date <= end_date", date: date).each do |activity| %>
      <p><%= activity.name %></p>
    <% end %>
  <% end %>

  <%# Add activity %>
  <div>
  <h1>Add a new activity</h1>
    <%= simple_form_for [@trip, @activity] do |f| %>
        <%= f.input :location %>
        <%= f.input :category %>
        <%= f.input :start_date, as: :date %>
        <%= f.input :price, as: :float %>
        <%= f.button :submit, "Add activity", class: 'btn-primary' %>
      <% end %>
  </div>
</div>

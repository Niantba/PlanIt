<div data-activity-page-target="show" class="d-none">

  <p>Location: <%= activity.location %></p>

  <% @comments = Comment.where(activity:activity) %>
    <% if @comments.any? %>
      <div class="each-comment">
        <p><%= Comment.last.user.first_name %> : <%= Comment.last.content %></p>
      </div>
    <% end %>
</div>

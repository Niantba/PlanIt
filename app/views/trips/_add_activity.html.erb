<%= simple_form_for [@trip, @activity] do |f| %>
  <%= f.input :name, placeholder: "Name", label: false, required: true %>
  <%= f.input :location, label: false,
              input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
              wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
  <%= f.input :start_date, as: :hidden, label: false,
              input_html: { value: date } %>
  <%= f.input :start_time, as: :string, label: false,
              input_html: { data: { controller: 'flatpickr', flatpickr_type_value: "time" } }
              %>
  <%# <%= f.input :end_date, as: :string,
              input_html: { data: { controller: "flatpickr" } } %>
  <%= f.button :submit, "Add activity", class:"btn-modal" %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Plan a new trip</h1>
      <h5>Build an itinerary and map out your upcoming travel plans</h5>
    </div>
    <div class="row">
      <%= simple_form_for (@trip) do |f| %>
        <%= f.input :destination, placeholder: "Where to?" %>
        <%= f.input :start_date, as: :string
                    input_html: { data: { controller: "flatpickr" } } %>
        <%= f.input :end_date, as: :string,
                    input_html: { data: { controller: "flatpickr" } } %>
        <%= f.fields_for :user_trips do |user_trip| %>
          <%= user_trip.input :user, collection: User.all, required: false %>
        <% end %>
        <%= f.button :submit, "Plan It", class: 'btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

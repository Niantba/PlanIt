<div class= "container">
<%# Profile banner %>
  <div class="profile-banner" style="background-image: url('https://images.unsplash.com/photo-1682685797140-c17807f8f217?ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2940&q=80')">
    <div class="profile-banner-card">
      <% if @user.image.attached? %>
        <%= cl_image_tag @user.image.key%>
      <% else %>
        <% my_initial = user.first_name.split ("") %>
        <div class="circle">
        <span class="initials">my_initials[0]</span>
        </div>
      <% end %>
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    </div>
  </div>

  <%# Friends scroll menu %>
  <h2>Friends</h2>
  <%# For each friend %>
  <div class="row">
    <div class="scrollmenu">
      <% @users.each do |user| %>
        <div class="profile-friend-card">
          <% if user.image.attached? %>
            <%= cl_image_tag @user.image.key%>
          <% else %>
            <% initial = user.first_name.split ("") %>
            <div class="circle">
              <span class="initials"><%= initial[0] %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

<%# Upcoming trips scroll menu %>
  <h2>Upcoming trips</h2>
  <%# For each trip %>
  <div class="row">
    <div class="scrollmenu">
      <% @trips.each do |trip| %>
        <div class="profile-trip-card">
          <img src="https://source.unsplash.com/random/?travel", class="object-fit-cover", alt="<%= trip.destination %>"/>
          <p><%= trip.destination %></p>
        </div>
      <% end %>
    </div>
  </div>

<%# Previous trips scrolling bar %>
    <h2>Previous trips</h2>
    <%# For each trip %>

<%# Documents scroll menu %>
  <h2>Your documents</h2>
  <%# For each document %>
  <div class="row">
    <div class="scrollmenu">
      <% @documents.each do |document| %>
        <div class="profile-doc-card">
            <% if document.file.attached? %>
              <%# <%= cl_file_tag @document.file.key%>
              <p><%= document.name %></p>
            <% else %>
              <p><%= document.name %></p>
            <% end %>
        </div>
     <% end %>
    </div>
  </div>
  <%# Add document form %>
  <%= simple_form_for(@document) do |f| %>
    <%= f.input :name, label: "Name of file" %>
    <%= f.input :file, as: :file, label: "Attach new document" %>
    <%= f.button :submit, "Add document", class: 'btn-primary' %>
  <% end %>



</div>

<%= render "navbarhome" %>
